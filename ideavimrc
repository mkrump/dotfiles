" Load your regular .vimrc
source ~/.vimrc

let mapleader = " "

" intelliJ Bindings
map <leader>a :action $SelectAll<CR>
map <leader>f :action FindUsages<CR>
map <leader>s :action ShowUsages<CR>
map <leader>r :action Run<CR>
map <M--> :action EditorDecreaseFontSize<CR>
map <M-=> :action EditorIncreaseFontSize<CR>

nnoremap <leader>v <C-W>v
nnoremap <C-J> <C-W>j
nnoremap <C-K> <C-W>k
nnoremap <C-L> <C-W>l
nnoremap <C-H> <C-W>h
